<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<application>
		<message-bundle>resources.application</message-bundle>
		<locale-config>
			<default-locale>en</default-locale>
		</locale-config>
	</application>
	<managed-bean>
		<managed-bean-name>menuView</managed-bean-name>
		<managed-bean-class>org.ashkan.view.MenuView</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>pickListView</managed-bean-name>
		<managed-bean-class>org.ashkan.view.PickListView</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>taskRunner</managed-bean-name>
		<managed-bean-class>org.ashkan.view.TaskRunner</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>userLoginView</managed-bean-name>
		<managed-bean-class>org.ashkan.view.UserLoginView</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>loginFilter</managed-bean-name>
		<managed-bean-class>org.ashkan.filter.LoginFilter</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>themeSwitcherView</managed-bean-name>
		<managed-bean-class>org.ashkan.view.ThemeSwitcherView</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>themeService</managed-bean-name>
		<managed-bean-class>org.ashkan.view.ThemeService</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>themeChoices</managed-bean-name>
		<managed-bean-class>org.ashkan.view.ThemeChoices</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>login.xhtml</display-name>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{userLoginView.login}</from-action>
			<from-outcome>ok</from-outcome>
			<to-view-id>/app/nao.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

</faces-config>
